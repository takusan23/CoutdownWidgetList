<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_list_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textStyle="italic" />

        <TextView
            android:id="@+id/widget_list_holiday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="土日"
            android:textAllCaps="false"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_list_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_list_percent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="50%"
            android:textSize="12sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/widget_list_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/widget_list_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text=""
        android:textSize="12sp" />

</LinearLayout>